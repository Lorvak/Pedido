<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoFormActivity" >

    <EditText
        android:id="@+id/editTextBorda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTamanho"
        android:layout_below="@+id/editTextTamanho"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/borda" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextSabor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="@string/sabor" />

    <EditText
        android:id="@+id/editTextTamanho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextSabor"
        android:layout_below="@+id/editTextSabor"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/tamanho" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextBorda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/save"
        android:onClick="salvar"
         />

</RelativeLayout>